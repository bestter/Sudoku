@model BestterSudoku.Models.ResolveValue

@{
    ViewData["Title"] = "Resolve";
}

<div>
    <table style="border: 1px solid black;">
        @if (@Model != null && Model.Grid != null)
        {
            var grids = Model.Grid.GetValues();
            @for (int i = 0; i <= 8; i++)
            {
                <tr>
                    @for (int j = 0; j <= 8; j++)
                    {
                        <td style="border: 2px double black; ">
                            <table>
                                <tr>
                                    @{
                                        GridValue value = grids[i, j];

                                        @if (value.IsDefinition)
                                        {
                                            <td style="border: 2px solid black; width: 2em; height:2em;">@Html.Raw(value.Value.ToString())</td>
                                        }
                                        else
                                        {
                                            <td style="border: 3px dotted fuchsia; width: 2em; height:2em;">@Html.Raw(value.Value.ToString())</td>
                                        }
                                    }
                                </tr>

                            </table>
                        </td>
                    }
                </tr>
            }
        }
    </table>
    <div>
        <span>@Model.NbTry</span>
        <span>@Model.Elapsed.ToString()</span>
    </div>
</div>
